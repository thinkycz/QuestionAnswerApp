<header class="header">
    <section class="container clearfix">
        <div class="logo hvr-buzz-out">
            <a href="{{ path('home') }}">
                <img src="{{ asset('images/logo.png') }}">
            </a>
        </div>
        <nav class="navigation">
            <form class="navbar-form" role="search" method="get" action="{{ path('searchAction') }}">
                <div class="input-group">
                    <input type="search" name="query_string" class="form-control searchbox" placeholder="Vyhledávání..." required>
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
            <ul>
                <li class="menu-item"><a href="{{ path('createQuestion') }}" class="{% if app.request.attributes.get('_route') == 'createQuestion' %}active{% endif %}">Položit dotaz</a></li>
                {% if not app.user %}
                    <li class="menu-item"><a href="{{ path('fos_user_security_login') }}" class="{% if app.request.attributes.get('_route') == 'fos_user_security_login' %}active{% endif %}">Přihlásit se</a></li>
                    <li class="menu-item"><a href="{{ path('fos_user_registration_register') }}" class="{% if app.request.attributes.get('_route') == 'fos_user_registration_register' %}active{% endif %}">Založit účet</a></li>
                {% else %}
                    <li class="menu-item"><a href="{{ path('showUser', {'id': app.user.id}) }}" class="{% if app.request.attributes.get('_route') == 'showUser' %}active{% endif %}">Můj profil</a></li>
                    <li class="menu-item"><a href="{{ path('fos_user_security_logout') }}">Odhlásit</a></li>
                {% endif %}
            </ul>
        </nav>
    </section>
</header>